{
    "$id": "http://brise.com/experiment.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "General": {
            "type": "object",
            "properties": {
                "isMinimizationExperiment": {
                    "type": "boolean"
                }
            },
            "required": [
                "isMinimizationExperiment"
            ]
        },
        "DomainDescription": {
            "type": "object",
            "properties": {
                "HyperparameterNames": {
                    "type": "array",
                    "items": [{
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "DataFile": {
                    "type": "string"
                },
                "DefaultConfigurationHandler": {
                    "type": "string"
                }
            },
            "required": [
                "HyperparameterNames",
                "DataFile"
            ]
        },
        "SelectionAlgorithm": {
            "anyOf": [{
                "$ref": "./selection/schema/sel_algorithm.schema.json#/definitions/SobolSequence"
            },
            {
                "$ref": "./selection/schema/sel_algorithm.schema.json#/definitions/ConfigSpaceSelector"
            }]
        },
        "TaskConfiguration": {
            "type": "object",
            "properties": {
                "TaskName": {
                    "type": "string"
                },
                "Scenario": {
                    "type": "object"
                },
                "TaskParameters": {
                    "type": "array",
                    "items": [{
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "ResultStructure": {
                    "type": "array",
                    "items": [{
                        "type": "string"
                    }]
                },
                "ResultDataTypes": {
                    "type": "array",
                    "items": [{
                        "type": "string"
                    }]
                },
                "ExpectedValuesRange": {
                    "type": "array",
                    "items": [{
                        "type": "array",
                        "items":[{
                            "type":"number"
                        }]
                    }]
                },
                "ResultPriorities": {
                    "type": "array",
                    "items": [{
                        "type": "integer",
                        "minimum": 0
                    }]
                },
                "MaxTimeToRunTask": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true
                }
            },
            "required": [
                "TaskName",
                "Scenario",
                "TaskParameters",
                "ResultStructure",
                "ResultDataTypes",
                "ExpectedValuesRange"
            ]
        },
        "OutliersDetection":{
            "$ref": "./outliers/schema/outlier_detector.schema.json#/definitions/OutliersDetection"
        },
        "Repeater": {
            "description": "Parameters related to Configuration evaluation accuracy.",
            "anyOf": [
                {
                    "$ref": "./repeater/schema/repeater.schema.json#/definitions/Default"
                },
                {
                    "$ref": "./repeater/schema/repeater.schema.json#/definitions/Student"
                }
            ]
        },
        "ModelConfiguration": {
            "description": "Configuration related to the prediction model creation process.",
            "anyOf": [
                {
                    "$ref": "./model/schema/model.schema.json#/definitions/BayesianOptimization"
                },
                {
                    "$ref": "./model/schema/model.schema.json#/definitions/Regression"
                }
            ]
        },
        "StopConditionTriggerLogic": {
            "type": "object",
            "properties": {
                "Expression": {
                    "type": "string"
                },
                "InspectionParameters":{
                    "type": "object",
                    "properties": {
                        "RepetitionPeriod": {
                            "type": "number",
                            "minimum": 0,
                            "exclusiveMinimum": true
                        },
                        "TimeUnit": {
                            "type": "string",
                            "enum": ["seconds","minutes","hours","days"]
                        }
                    }
                }
            },
            "required": [
                "Expression"
            ]
        },
        "StopCondition": {
            "$ref": "./stop_condition/schema/stop_condition.schema.json#/definitions/StopCondition"
        }
    },
    "required": [
        "General",
        "DomainDescription",
        "SelectionAlgorithm",
        "TaskConfiguration",
        "OutliersDetection",
        "Repeater",
        "ModelConfiguration",
        "StopCondition"
    ]
}
